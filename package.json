{
  "name": "note-taking-app",
  "version": "1.0.0",
  "description": "Note taking app in modern javascript and express.js",
  "main": "src/index.js",
  "author": "Omar.A",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run prod; else npm run dev; fi",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "prod": "cross-env NODE_ENV=production node src/index.js",
    "test": "cross-env NODE_ENV=test jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest -i --watchAll",
    "coverage": "cross-env NODE_ENV=test jest -i --coverage",
    "coverage:coveralls": "cross-env NODE_ENV=test jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "docker:up": "docker-compose up -d",
    "db:sync": "node src/commands/sync.command.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status": "^1.6.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mysql2": "^3.6.0",
    "nanoid": "^3.3.6",
    "redis": "^4.6.7",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "faker": "^5.5.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "node-mocks-http": "^1.12.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "redis-mock": "^0.56.3",
    "supertest": "^6.3.3"
  }
}
